# Ubuntu upstart file at /etc/init/redis.conf

pre-start script
    mkdir -p {{ redis.logpath }}
    mkdir -p {{ redis.dbdir }}
    # chown -R redis.redis {{ redis.dbdir }}
end script

limit nofile 32000 32000
start on runlevel [2345]
stop on runlevel [06]

script
    exec start-stop-daemon --start --quiet --exec /usr/local/bin/redis-server -- {{ redis.configfile }} {{ " ".join(redis.options) }}
end script
